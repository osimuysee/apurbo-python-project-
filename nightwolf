var1 = int(input("enter the var1: "))
var2 = int(input("enter the second var2: "))
sum = var1 + var2
print("sum value: ",sum)
division = var1 / var2
print("division value: ", division)
mul = var1 * var2
print("multiplication value: ", mul)
sub = var1 - var2
print("substraction value: ", sub)
per = (var1 * var2)/2
print("per value: ", per)
area = var1 ** var2
print("area value: ", area)
